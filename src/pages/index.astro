---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero';
import Packages from '../components/Packages';
import CaseStudiesGrid from '../components/CaseStudiesGrid';
import PartnerOrganizations from '../components/PartnerOrganizations';
import ImpactIntro from '../components/ImpactIntro';
---

<BaseLayout>
  <!-- Home Section with Packages -->
  <section id="home" class="pt-12 sm:pt-16 lg:pt-20 pb-6 sm:pb-8">
    <Hero client:load calendarLink="https://cal.com/vincent-baron/30mins-meeting" showWithTestimonials={true} />
  </section>

  <!-- Packages Section -->
  <section id="packages" class="py-6 sm:py-8 lg:py-12 scroll-mt-20">
    <Packages client:load />
  </section>

  <!-- Calculator Section -->
  <section id="calculator" class="py-6 sm:py-8 lg:py-12 scroll-mt-20">
    <Hero client:load calendarLink="https://cal.com/vincent-baron/30mins-meeting" showOnlyCalculator={true} />
  </section>

    <!-- Work Section -->
    <section id="work" class="py-4 sm:py-6 lg:py-8 scroll-mt-20">
      <CaseStudiesGrid client:load />
    </section>

    <!-- Impact Section -->
    <section id="impact" class="py-6 sm:py-8 lg:py-12 px-4 sm:px-6 lg:px-8 scroll-mt-20">
      <div class="max-w-6xl mx-auto">
        <ImpactIntro client:load />

        <!-- Partner Organizations -->
        <PartnerOrganizations client:load />
      </div>
    </section>
</BaseLayout>

<script>
  // Handle initial page load with hash
  document.addEventListener('DOMContentLoaded', function() {
    const hash = window.location.hash;
    if (hash) {
      const target = document.querySelector(hash);
      if (target) {
        setTimeout(() => {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }, 100);
      }
    }
  });

  // Handle browser back/forward navigation
  window.addEventListener('popstate', function() {
    const hash = window.location.hash || '#home';
    const target = document.querySelector(hash);
    if (target) {
      target.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
  });
</script>
