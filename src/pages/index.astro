---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero';
import SprintTimeline from '../components/SprintTimeline';
import CaseStudiesGrid from '../components/CaseStudiesGrid';
import PartnerOrganizations from '../components/PartnerOrganizations';
---

<BaseLayout>
  <!-- Home Section -->
  <section id="home" class="pt-12 sm:pt-16 lg:pt-20 min-h-[70vh] lg:min-h-[80vh] xl:min-h-screen pb-0">
    <Hero client:load calendarLink="https://calendly.com/vbaron4220/30min" />
  </section>

    <!-- Process Section -->
    <section id="process" class="py-8 sm:py-12 lg:py-16">
      <SprintTimeline client:load />
    </section>

    <!-- Work Section -->
    <section id="work" class="py-4 sm:py-6 lg:py-8 scroll-mt-20">
      <CaseStudiesGrid client:load />
    </section>

    <!-- Impact Section -->
    <section id="impact" class="py-6 sm:py-8 lg:py-12 px-4 sm:px-6 lg:px-8 scroll-mt-20">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-6 sm:mb-8 lg:mb-10">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-3 sm:mb-4 leading-tight">
            Business as a Force for Good
          </h2>
          <p class="text-base sm:text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed">
            I believe technology should drive positive change. That's why{' '}
            <span class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              5% of my profits
            </span>{' '}
            are invested in projects driving{''}<span class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              social and environmental impact.
            </span>{' '}
          </p>
        </div>

        <!-- Partner Organizations -->
        <PartnerOrganizations client:load />
      </div>
    </section>
</BaseLayout>

<script>
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
