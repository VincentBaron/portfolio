---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero';
import SprintTimeline from '../components/SprintTimeline';
import CaseStudiesGrid from '../components/CaseStudiesGrid';
import PartnerOrganizations from '../components/PartnerOrganizations';
---

<BaseLayout>
  <div class="bg-blue-50">
    <!-- Home Section -->
    <section id="home" class="pt-16 sm:pt-20 min-h-screen">
      <Hero client:load calendarLink="https://cal.com/2weekstosolve" />
    </section>

    <!-- Process Section -->
    <section id="process" class="min-h-screen py-16">
      <SprintTimeline />
    </section>

    <!-- Work Section -->
    <section id="work" class="py-8 scroll-mt-20">
      <CaseStudiesGrid client:load />
    </section>

    <!-- Impact Section -->
    <section id="impact" class="py-12 px-4 sm:px-6 lg:px-8 scroll-mt-20">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-10">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4 leading-tight">
            Business as a Force for Good
          </h2>
          <p class="text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed">
            We believe technology should drive positive change. That's why{' '}
            <span class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              5% of our profits
            </span>{' '}
            are invested in projects driving social and environmental impact.
          </p>
        </div>

        <!-- Partner Organizations -->
        <PartnerOrganizations client:load />
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
