---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { caseStudies } from '../../data/caseStudies';

export const getStaticPaths = () =>
  caseStudies.map((study) => ({
    params: { slug: study.slug },
  }));

const { slug } = Astro.params;
const caseStudy = caseStudies.find((study) => study.slug === slug);

if (!caseStudy) {
  return Astro.redirect('/#work', 302);
}

const relatedStudies = caseStudies
  .filter((study) => study.slug !== caseStudy.slug)
  .slice(0, 2);

const formattedDate = new Date(caseStudy.publishedAt).toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric',
});

const pageTitle = `${caseStudy.title} | Case Study · 2 Weeks to Solve It`;
const caseStudiesAnchor = '/#work';
---

<BaseLayout title={pageTitle} description={caseStudy.summary}>
  <article class="min-h-screen pt-24 sm:pt-32 pb-16 bg-gradient-to-b from-white via-white to-blue-50/30">
    <header class="px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="mb-6 text-sm text-gray-500">
          <span>{formattedDate}</span>
          <span aria-hidden="true" class="mx-2">•</span>
          <span>2-week sprint</span>
        </div>
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
          {caseStudy.title}
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed">
          {caseStudy.summary}
        </p>

        {caseStudy.tags.length > 0 && (
          <div class="mt-6 flex flex-wrap gap-2">
            {caseStudy.tags.map((tag) => (
              <span class="inline-flex items-center rounded-md bg-blue-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-700">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="mt-12 sm:mt-16">
      {caseStudy.heroImage ? (
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <img
            src={caseStudy.heroImage}
            alt={`Screenshot from ${caseStudy.title}`}
            class="w-full rounded-3xl shadow-xl border border-white/60"
            loading="lazy"
          />
        </div>
      ) : (
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="h-64 sm:h-80 rounded-3xl bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 flex items-center justify-center">
            <div class="text-center max-w-2xl px-4">
              <p class="text-xl font-semibold text-blue-800">
                Visuals for this build are protected under NDA.
              </p>
              <p class="mt-2 text-sm text-blue-900/80">
                Happy to walk through the full implementation on a discovery call.
              </p>
            </div>
          </div>
        </div>
      )}
    </div>

    {caseStudy.metrics && caseStudy.metrics.length > 0 && (
      <section class="mt-12 sm:mt-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-sm font-semibold uppercase tracking-wide text-blue-600 mb-3">
            Snapshot outcomes
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
            {caseStudy.metrics.map((metric) => (
              <div class="rounded-2xl border border-blue-100 bg-white/80 p-5 shadow-sm shadow-blue-100">
                <p class="text-xs uppercase tracking-wide text-blue-500 font-semibold mb-1">
                  {metric.label}
                </p>
                <p class="text-2xl font-bold text-gray-900">
                  {metric.value}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <section class="mt-12 sm:mt-16 px-4 sm:px-6 lg:px-8">
      <div class="prose prose-blue max-w-4xl mx-auto">
        {caseStudy.contentSections.map((section) => (
          <section class="mb-10">
            <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-3">
              {section.heading}
            </h2>
            {section.body.map((paragraph) => (
              <p class="text-base text-gray-700 leading-relaxed mb-4">
                {paragraph}
              </p>
            ))}
          </section>
        ))}
      </div>
    </section>

    <section class="mt-12 sm:mt-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto rounded-3xl bg-white/90 border border-blue-100 p-8 sm:p-10 shadow-lg shadow-blue-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-3">
          Want a similar sprint for your team?
        </h2>
        <p class="text-base text-gray-600 mb-6">
          Book a call and we’ll map out a 2-week plan tailored to your stack, your processes, and the outcomes you need right now.
        </p>
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href="https://calendly.com/vbaron4220/30min"
            class="inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 px-6 py-3 text-base font-semibold text-white shadow-lg shadow-blue-500/30 transition hover:-translate-y-0.5 hover:from-blue-700 hover:to-purple-700 hover:shadow-xl hover:shadow-blue-500/40"
          >
            Book a discovery call
          </a>
          <a
            href={caseStudiesAnchor}
            class="inline-flex items-center justify-center rounded-lg border-2 border-gray-200 px-6 py-3 text-base font-semibold text-gray-700 transition hover:border-blue-600 hover:text-blue-600"
          >
            Explore more builds
          </a>
        </div>
      </div>
    </section>

    {relatedStudies.length > 0 && (
      <section class="mt-16 px-4 sm:px-6 lg:px-8 pb-16">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">
            Keep exploring
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
            {relatedStudies.map((related) => (
              <a
                href={`/work/${related.slug}`}
                class="group rounded-2xl border border-gray-200 bg-white/90 p-6 transition hover:-translate-y-1 hover:border-blue-500 hover:shadow-lg"
              >
                <p class="text-xs uppercase tracking-wide text-blue-500 font-semibold mb-2">
                  Case Study
                </p>
                <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600">
                  {related.title}
                </h3>
                <p class="text-sm text-gray-600 leading-relaxed">
                  {related.summary}
                </p>
                <span class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600">
                  Read the story
                  <svg
                    class="ml-2 h-4 w-4 transform transition group-hover:translate-x-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                    />
                  </svg>
                </span>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
  </article>
</BaseLayout>
