    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">Privacy Policy</h1>
        <p class="text-xl text-gray-600 mb-8">Last updated: October 8, 2025</p>
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-600">Coming soon...</p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
