---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Font Comparison">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-12 text-gray-900">Font Comparison</h1>
      
      <div class="space-y-8">
        <!-- Nunito -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Nunito - Soft, rounded, very friendly</p>
          <h2 style="font-family: 'Nunito', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Nunito', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Quicksand -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Quicksand - Light, rounded, gaming aesthetic</p>
          <h2 style="font-family: 'Quicksand', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Quicksand', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Baloo 2 -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Baloo 2 - Bouncy, playful, engaging</p>
          <h2 style="font-family: 'Baloo 2', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Baloo 2', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Varela Round -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Varela Round - Clean rounded, professional yet fun</p>
          <h2 style="font-family: 'Varela Round', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Varela Round', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Lilita One -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Lilita One - Chunky, bold, very playful</p>
          <h2 style="font-family: 'Lilita One', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Lilita One', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Bungee -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Bungee - Bold arcade/street style</p>
          <h2 style="font-family: 'Bungee', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Bungee', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Rubik -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Rubik - Modern, slightly rounded, versatile</p>
          <h2 style="font-family: 'Rubik', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Rubik', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Righteous (current) -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-blue-500">
          <p class="text-sm text-blue-600 mb-4">Righteous - Bold, game-like (CURRENT)</p>
          <h2 style="font-family: 'Righteous', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Righteous', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Fredoka -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Fredoka - Rounded, friendly, soft curves</p>
          <h2 style="font-family: 'Fredoka', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Fredoka', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>

        <!-- Montserrat -->
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-200">
          <p class="text-sm text-gray-500 mb-4">Montserrat - Clean, modern with subtle curves</p>
          <h2 style="font-family: 'Montserrat', sans-serif;" class="text-5xl font-bold mb-4 text-gray-900">
            Build Fast, Scale Smart, Win Big
          </h2>
          <p style="font-family: 'Montserrat', sans-serif;" class="text-xl text-gray-600">
            AI-powered solutions for modern businesses
          </p>
        </div>
      </div>

      <div class="mt-12 text-center">
        <a href="/" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-blue-700 transition">
          Back to Home
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Quicksand:wght@400;600;700&family=Baloo+2:wght@400;600;700&family=Varela+Round&family=Lilita+One&family=Bungee&family=Rubik:wght@400;600;700&family=Righteous&family=Fredoka:wght@400;600;700&family=Montserrat:wght@400;600;700&display=swap');
</style>
